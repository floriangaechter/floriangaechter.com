---
import Navigation from "../components/Navigation.astro"
import TimeAgo from "javascript-time-ago"
import en from "javascript-time-ago/locale/en"

TimeAgo.addDefaultLocale(en)

const { centered, frontmatter } = Astro.props
const { slug } = Astro.params
const timeAgo = new TimeAgo("en-US")
---

<html lang="en">
	<head>
		<meta charset="utf-8">
		<link rel="icon" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content={frontmatter.description} />
		<title>{frontmatter.title} | Florian G채chter</title>
		<meta property="og:title" content={`${frontmatter.title} | Florian G채chter`} />
		<meta property="og:description" content={frontmatter.description} />
		<meta property="og:image" content={`https://www.floriangaechter.com/og-image/${slug}.png`}
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org/",
			"@type": "Person",
			"name": "Florian G채chter",
			"url": "https://www.floriangaechter.com/",
			"image": {
				"@type": "ImageObject",
				"url": "https://www.floriangaechter.com/floriangaechter.jpg",
				"caption": "Florian G채chter",
				"width": "600",
				"height": "400"
			},
			"sameAs": [
				"https://mastodon.social/@neither1nor0",
				"https://www.linkedin.com/in/florian-g%C3%A4chter-39b013188/",
				"https://github.com/floriangaechter"
			],
			"jobTitle": "Developer Advocate",
			"worksFor": {
				"@type": "Organization",
				"name": "Frontify",
				"url": "https://www.frontify.com/en/",
				"sameAs": ["https://www.google.com/search?kgmid=/g/11g9mv8ly4"]
			}
		})} />
		<script defer data-domain="floriangaechter.com" src="https://plausible.gaechter.xyz/js/script.js"></script>
	</head>
	<body class="bg-base-paper dark:bg-base-black text-base-black dark:text-base-200">
		<div class="container mx-auto px-4">
				<Navigation />
				<main class=`${centered ? "max-w-3xl mx-auto " : ""}my-12 prose prose-flexoki dark:prose-invert`>
					<div class="uppercase text-base-600 dark:text-base-500 text-sm mb-2">
						Published {timeAgo.format(new Date(frontmatter.pubDate), "round-minute")}.
						{frontmatter.modDate > frontmatter.pubDate && ` Updated ${timeAgo.format(new Date(frontmatter.modDate), "round-minute")}.`}
					</div>
					<slot />
				</main>
		</div>
	</body>
</html>
