---
import "@fontsource/inter/variable.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="{{ excerpt ?? title }}" />
		<meta name="theme-color" content="78716c" />
		<title>{title} | Florian GÃ¤chter</title>
		<style>
			body {
				font-feature-settings: "frac" 1;
			}
		</style>
	</head>
	<body
		class="bg-[url('/lake.jpg')] bg-cover font-sans leading-normal text-gray-800 px-4 sm:px-10"
		x-data="{ showMobileNav: false }"
	>
		<Navigation />
		<div class="max-w-5xl mx-auto relative py-16 lg:pt-40 lg:pb-32">
			<slot />
		</div>
		<Footer />
	</body>
</html>
