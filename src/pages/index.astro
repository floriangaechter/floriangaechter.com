---
import Layout from "../layouts/Main.astro";
import Heading from "../components/Heading.astro";
import PostPreviewList from "../components/PostPreviewList.astro";
import type { Frontmatter } from "../types";

const posts = await Astro.glob<Frontmatter>("./posts/**/*.mdx");
---

<Layout title="Home" keywords={['developer advocate', 'blog', 'tips and tricks', 'learning']} description="Developer Advocate at Frontify sharing tips, tricks, and learnings about technology and software development. Based in Switzerland.">
	<Heading
		article={false}
		title="These are a couple of things I've come across so far…"
		subtitle="Hi, I'm Florian"
		intro={"I’m a Developer Advocate at Frontify, based in Switzerland. On this blog, I'll be sharing my journey, tips and tricks, and everything I've learned about things I've come across. I hope you enjoy reading my posts!"}
	/>

	<PostPreviewList posts={posts} />
</Layout>
